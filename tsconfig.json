{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],  // ← adicionado: DOM para compatibilidade com tipos React/JSX

    // JSX / React (obrigatório para Ink)
    "jsx": "react-jsx",
    "jsxImportSource": "react",  // opcional, mas ajuda em alguns casos

    // Node.js + ESM compatibilidade
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    // Type Checking rigoroso
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Outros úteis
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },

  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.mts"
  ]
}